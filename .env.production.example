# Django production settings
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_VITE_DEV_MODE=False
SECRET_KEY=replace-with-a-strong-random-secret
ALLOWED_HOSTS=path.tigerapps.org
CSRF_TRUSTED_ORIGINS=https://path.tigerapps.org

# External PostgreSQL (RDS) URL
# Example:
# DATABASE_URL=postgres://username:password@your-rds-endpoint:5432/tigerpath
DATABASE_URL=

# Local Redis (Docker service in docker-compose.prod.yml)
REDIS_URL=redis://redis:6379/1
REDIS_MAXMEMORY=128mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_MEM_LIMIT=192m

# Optional runtime settings
PYTHONUNBUFFERED=1
CACHE_DEFAULT_TIMEOUT=300

# Gunicorn / container tuning for low-resource EC2 instances
GUNICORN_WORKERS=2
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=600
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
WEB_MEM_LIMIT=768m
